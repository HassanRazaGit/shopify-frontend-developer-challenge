[
  {
    "name": "theme_info",
    "theme_name": "Custom Collagen Task",
    "theme_version": "1.0.0",
    "theme_author": "Hassan",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "Desktop logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 200,
        "step": 5,
        "unit": "%",
        "label": "Heading Font size scale",
        "default": 100
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body Font size scale",
        "default": 100
      }
    ]
},
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 800,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      }
    ]
  }
]
